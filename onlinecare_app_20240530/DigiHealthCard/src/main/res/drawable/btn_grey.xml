<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:state_enabled="false" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"
        >
        <gradient
            android:startColor="#99414143"
            android:endColor="#99414143"
            android:type="linear"
            android:angle="90"
            />
        <corners android:radius="8dp" />
    </shape>
</item>
<item
    android:state_pressed="true"
    android:state_enabled="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <gradient
            android:startColor="#99414143"
            android:endColor="#99414143"
            android:type="linear"
            android:angle="90"
            />
        <corners android:radius="8dp" />
    </shape>
</item>
<item
    android:state_focused="true"
    android:state_enabled="true">

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <gradient
            android:startColor="#99414143"
            android:endColor="#99414143"
            android:type="linear"
            android:angle="90"
            />
        <corners android:radius="8dp" />
    </shape>
</item>
<item
    android:state_enabled="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <gradient
            android:startColor="#414143"
            android:endColor="#414143"
            android:type="linear"
            android:angle="90"
            /><!-- GREY = 4D4D4D -->
        <corners android:radius="8dp" />
    </shape>
</item>
</selector>