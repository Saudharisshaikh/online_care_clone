<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/cust_border_white_outline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jack Denial"
                android:textColor="@color/theme_red"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toStartOf="@+id/ivDeleteInsurance"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/ivDeleteInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black"

                android:paddingStart="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tvPolicyHolder"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tvPolicyNo"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tvGroup"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvCode"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tvCopay"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ic_delete_forever_black_24dp-->
            <!--<ImageView
                android:id="@+id/ivDeleteInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tvAddPrimary"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignTop="@+id/tvAddPrimary"
                android:layout_alignBottom="@+id/tvAddPrimary"/>-->

            <TextView
                android:id="@+id/tvAddPrimary"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select as Primary Insurance"
                android:textStyle="bold"
                android:background="@drawable/apptmnt_confirm_drawable"
                android:textColor="#FFFFFF"
                android:padding="10dp"

                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
