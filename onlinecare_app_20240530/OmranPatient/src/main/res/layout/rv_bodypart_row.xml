<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/list_selector2"
    android:id="@+id/rvPainItem">
    <!--rv_item_selector     selector is in OnlineCareUC module-->
    <!--android:padding="15dp"-->

    <TextView
        android:id="@+id/tvPSLbl"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worst Pain Possible"
        android:textStyle="bold"
        android:gravity="center"
        android:minLines="2"
        android:textSize="10sp"/>
    <ImageView
        android:id="@+id/ivPSEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bp_chest"/>
</LinearLayout>
