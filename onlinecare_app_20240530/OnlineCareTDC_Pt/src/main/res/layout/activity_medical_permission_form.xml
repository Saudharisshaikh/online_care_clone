    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    tools:context="com.app.OnlineCareTDC_Pt.MedicalPermissionForm" >

    <ScrollView
        android:id="@+id/scc"
        android:layout_width="match_parent"
