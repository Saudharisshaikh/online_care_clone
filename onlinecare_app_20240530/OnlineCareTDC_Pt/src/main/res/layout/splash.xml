<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:src="@drawable/emergency_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="In case of any medical emergency dial this number below"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSplashCAllninonon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/light"
                android:drawablePadding="10dp"
                android:text="CALL 911"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_above="@id/tvSplashContinue"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:id="@+id/privacycb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/theme_red"
            android:text="I agree to Total Direct Care"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/privacycb"
            android:clickable="true"
            android:text="privacy policy"
            android:textColor="@color/theme_red" />

        <TextView
            android:id="@+id/tvlabeland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/privacycb"
            android:text="and"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/privacycb"
            android:layout_toEndOf="@+id/tvlabeland"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:text="terms of service."
            android:textColor="@color/theme_red" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvSplashContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/policyLay"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="CONTINUE"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="normal" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cust_border_white_half_top"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSplashContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/policyLay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_selector"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="CONTINUE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="normal" />


        <!--android:background="@drawable/cust_border2"-->
        <LinearLayout
            android:id="@+id/policyLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDatarate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAgreement"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:drawableStart="@drawable/ic_useragreement"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="End User Agreement"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#545454"
                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvPolicy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:drawableStart="@drawable/ic_privacypolicy"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Privacy Policy"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#545454"
                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDatarate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="(Msg / data rates may  apply)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#545454"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/tvSplashCAllninonon"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_txt" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvSplashCAllninonon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cont"
        android:layout_centerHorizontal="true"
        android:background="@drawable/call911"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>


