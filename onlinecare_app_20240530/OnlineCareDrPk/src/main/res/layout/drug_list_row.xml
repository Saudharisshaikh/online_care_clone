<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <!--android:layout_toLeftOf="@+id/ivDeleteDrug"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvDrugNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="@color/theme_red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDrugName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Drug name"
                android:textStyle="normal"
                android:textColor="@color/black"/>
        </LinearLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Strength"
                android:textColor="@color/theme_red"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDrugStrength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="250"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Dosage form"
                android:textColor="@color/theme_red"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDrugDosageForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="Tablet"
                android:textStyle="normal" />
        </LinearLayout>

        <!--android:layout_marginTop="5dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Quantity"
                android:textColor="@color/theme_red"
                android:textStyle="normal"
                android:weightSum="10" />

            <TextView
                android:id="@+id/tvDrugQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:text="30"
                android:textStyle="normal"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Duration"
                android:textColor="@color/theme_red"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDrugDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:text="20 Days"
                android:textStyle="normal"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Potency Unit Code"
                android:textColor="@color/theme_red"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDrugPotencyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="de5etd"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Directions"
                android:layout_weight="7"
                android:textColor="@color/theme_red"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDrugInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:text="Take 1 tablet daily by mouth. Donot take before meel."
                android:textStyle="normal"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refills/PRN"
                android:textColor="@color/theme_red"
                android:layout_weight="7"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDrugRefils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/ivEditDrug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/ivDeleteDrug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>