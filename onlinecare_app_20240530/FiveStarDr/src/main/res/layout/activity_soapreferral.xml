<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gray"
    tools:context="com.app.fivestardoc.ActivitySOAPReferral">

    <LinearLayout
        android:id="@+id/tabOptions"
        android:background="@drawable/cust_border"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDmeRef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_red"
            android:textColor="#FFFFFF"
            android:text="DME Referral"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/btnSkilledN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:textColor="@color/theme_red"
            android:text="Skilled Nursing Therapy"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/btnHomeCareRef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:textColor="@color/theme_red"
            android:text="Homecare\nReferral"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="1"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvSoapReferrals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent">

    </ListView>
</LinearLayout>
