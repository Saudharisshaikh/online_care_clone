<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLabRequests">

    <ListView
        android:id="@+id/lvLabRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/lv_labrequest_row"
        android:divider="@drawable/lv_divider" >
    </ListView>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvNoLabReq"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You don't have any lab Request yet"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>