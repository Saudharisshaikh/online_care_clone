<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.amnm_uc.PatientConsentActivity" >

    <ScrollView
        android:id="@+id/scc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical" >
        
        
        
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Full name"/>
            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Name"
                android:inputType="textCapWords"
                android:padding="10dp" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Blood Group"/>

            <EditText
                android:id="@+id/etBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Blood Group" 
                 android:inputType="text"
                android:padding="10dp" />
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Insurance"/>

            <EditText
                android:id="@+id/etInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Insurance"
                 android:inputType="textCapWords"
                android:padding="10dp" />
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Insurance Group"/>

            <EditText
                android:id="@+id/etInsuranceGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Insurance Group" 
                 android:inputType="text"
                android:padding="10dp" />
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Special medical problems (comma separeted)"/>

            <EditText
                android:id="@+id/etSpecialmedicalproblems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Special medical problems"
                android:padding="10dp"                
                android:inputType="textMultiLine"  
    			android:lines="8" 
    			android:minLines="6"  
    			android:gravity="top|left" 
   		   	    android:maxLines="10" 
   			    android:scrollbars="vertical" />

            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Last tetanus shot (MM/DD/YY)"/>
            <EditText
                android:id="@+id/etLasttetanusshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Last tetanus shot (MM/DD/YY)"
                android:padding="10dp"
                android:focusable="false"
                android:editable="false" 
                 android:inputType="none" />
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Medication allergies"/>

            <EditText
                android:id="@+id/etMedicationallergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Medication allergies"
                android:padding="10dp"
                android:inputType="textMultiLine"  
    			android:lines="8" 
    			android:minLines="6"  
    			android:gravity="top|left" 
   		   	    android:maxLines="10" 
   			    android:scrollbars="vertical" />
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="History of asthama"/>
            
            <RadioGroup
                    android:id="@+id/rgHistoryofasthama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioHistoryofasthamaYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Yes"
                        android:textColor="#d04c26" />

                    <RadioButton
                        android:id="@+id/radioHistoryofasthamaNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#d04c26" />
                </RadioGroup>
                
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="History of unconsciousness"/>
            
            <RadioGroup
                    android:id="@+id/rgHistoryofunconsciousness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioHistoryofunconsciousnessYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Yes"
                        android:textColor="#d04c26" />

                    <RadioButton
                        android:id="@+id/radioHistoryofunconsciousnessNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#d04c26" />
                </RadioGroup>
                <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="History of heart problems"/>
            
            <RadioGroup
                    android:id="@+id/rgHistoryofheart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioHistoryofheartYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Yes"
                        android:textColor="#d04c26" />

                    <RadioButton
                        android:id="@+id/radioHistoryofheartNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#d04c26" />
                </RadioGroup>
                <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Nature of the problem"/>

            <EditText
                android:id="@+id/etNatureoftheproblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Nature of the problem"
                android:padding="10dp"
                android:inputType="textMultiLine"  
    			android:lines="8" 
    			android:minLines="6"  
    			android:gravity="top|left" 
   		   	    android:maxLines="10" 
   			    android:scrollbars="vertical" />
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Medical procedure"/>

            <EditText
                android:id="@+id/etMedicalprocedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Medical procedure"
                android:padding="10dp"
                android:inputType="textMultiLine"  
    			android:lines="8" 
    			android:minLines="6"  
    			android:gravity="top|left" 
   		   	    android:maxLines="10" 
   			    android:scrollbars="vertical" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Doctor"/>
            <EditText
                android:id="@+id/etDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Doctor"
                android:inputType="textCapWords"
                android:padding="10dp" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Doctor date"/>
            <EditText
                android:id="@+id/etDoctordate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Doctor date"
                android:padding="10dp"
                android:focusable="false"
                android:editable="false" 
                 android:inputType="none" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Sign date"/>
            <EditText
                android:id="@+id/etSigndate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Sign date"
                android:padding="10dp"
                android:focusable="false"
                android:editable="false" 
                 android:inputType="none" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Primary signature"/>
            <ImageView
                android:id="@+id/ivDoctorSignature"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_signature"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Tap to sign"
                android:editable="false" 
                android:inputType="none"
                android:padding="10dp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Notary Document"/>
            <ImageView
                android:id="@+id/ivNotaryDocument"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/icon_document"
                android:background="@drawable/cust_border_white_outline"
                android:hint="Tap to sign"
                android:editable="false"
                android:inputType="none"
                android:padding="10dp" />
        
        <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
            <Button
                android:id="@+id/btnSubmitForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"   
                android:layout_margin="5dp"           
                android:background="@drawable/btn_selector"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Submit" />
            
            <Button
                android:visibility="gone"
                android:id="@+id/btnSkipForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"  
                android:layout_margin="5dp"             
                android:background="@drawable/btn_selector"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:text="Skip" />
            
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>