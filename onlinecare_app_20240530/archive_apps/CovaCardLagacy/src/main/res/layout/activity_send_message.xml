<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >
    
<LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            
            <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Text Message"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ee4a1f"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Online Care Messages"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ee4a1f"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMsgDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Patient Name: Aftab Saraz"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ee4a1f"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>
            
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/etMessage"
                android:padding="10dp"
                android:hint="Message"
               android:background="@drawable/bg_fld"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:maxLines="10"
                android:ems="10" 
                android:gravity="top"
               >

            </EditText>
            <TextView
            android:id="@+id/btnMsgOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"         
            android:gravity="center"
            android:textSize="18sp"
            android:text="Reply"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        </LinearLayout>
</LinearLayout>
