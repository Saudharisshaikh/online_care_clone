<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!-- Customize your theme here. -->
    <!--</style>-->


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ================================================================================= -->

    <!-- Application theme. -->
    <style name="DrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


        <item name="colorPrimary">@color/covacard_dark_green</item>
        <item name="colorPrimaryDark">@color/covacard_dark_green</item>
        <item name="colorAccent">@color/toolBarColor</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:textColorSecondary">@android:color/background_dark</item>
        <item name="actionMenuTextColor">@android:color/background_dark</item>
    </style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:background">@color/half_transparent</item> <!-- these 2 lines if custborder background added it was shown on each listview cell -->
        <item name="background">@color/half_transparent</item>
        <item name="android:windowBackground">@drawable/cust_border_half_transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/half_transparent</item>
        <item name="android:windowContentOverlay">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@color/half_transparent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--for white drawer title and togle color use this  in toolbar-->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>

    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>


    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/app_blue_color</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>


    <style name="FilePickerTheme" parent="LibAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--added by gm for file picker tabbar txt color-->
        <item name="android:textColorPrimary">@android:color/white</item><!--Selected-->
        <item name="android:textColorSecondary">#80FFFFFF</item><!--othertabs-->
        <!--<item name="actionMenuTextColor">@android:color/white</item>-->
    </style>




    <!--===============Angora.io Starts============================================-->

    <!--===============Angora.io Ends============================================-->


    <!--Fresco starts-->
    <style name="SimpleButtonStyle" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="DescriptionText" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--Fresco Ends-->

</resources>
