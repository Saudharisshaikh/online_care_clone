<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCFFFFFF"
    android:orientation="vertical" >
    
    <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:background="@color/theme_red"
                android:gravity="center"
                android:padding="10dp"
                android:text="Add Insurance"/>

    <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-3dp"
                android:text="Insurance"/>

            <EditText
                android:id="@+id/etInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_fld"
                android:hint="Insurance"
                 android:inputType="textCapWords"
                android:paddingLeft="10dp" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Policy number"/>

            <EditText
                android:id="@+id/etPolicynumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_fld"
                android:hint="Policy number" 
                 android:inputType="number"
                android:paddingLeft="10dp" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Group"/>

            <EditText
                android:id="@+id/etGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_fld"
                android:hint="Group" 
                 android:inputType="text"
                android:paddingLeft="10dp" />
            
            <TextView 
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:text="Code"/>

            <EditText
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                 android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_fld"
                android:hint="Code" 
                 android:inputType="text"
                android:paddingLeft="10dp" />
            
            
            <Button
                android:id="@+id/btnSubmitForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"          
                android:background="@drawable/btn_selector"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:text="Ok, Save Insurance" />
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"          
                android:background="@drawable/btn_selector"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:text="Skip" />
</LinearLayout>