<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_care_providers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.mdlive_cp.ActivityCareProviders">


    <LinearLayout
        android:id="@+id/contCompany"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <TextView
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Company :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <com.app.mdlive_cp.util.SpinnerCustom
            android:id="@+id/spCompany"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"/>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/contCompany"
        android:layout_above="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<HorizontalScrollView
            android:fadeScrollbars="false"
            android:scrollbarSize="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </HorizontalScrollView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/tvTabNurse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Nurse"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabNursePractitioner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nurse Practitioner"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabSocialWorker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Social  Worker"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabDietitian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Dietitian"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/tvTabOT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="OT/PT"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabPharmacist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pharmacist"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabOM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Office Manager"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabMA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:text="Medical Assistant"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/tvTabSup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red_opaque_60"
                android:gravity="center"
                android:text="Supervisor"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"/>

        <ListView
            android:id="@+id/lvNurse"
            android:divider="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>


    <Button
        android:id="@+id/btnDone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:background="@color/theme_red"/>
</RelativeLayout>
