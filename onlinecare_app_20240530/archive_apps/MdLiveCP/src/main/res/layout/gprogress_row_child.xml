<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/cust_border_grey_outline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explain progress : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_ExpProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barriers :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_Barriers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interventions to overcome :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_Interv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self-management :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_SelfMgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral made ?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_RefMade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who was referral to ?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_WhoWasRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency back-up plan ?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_EmBackupPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are revisions needed ?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_AreRevNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What revisions were made ?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_red"/>
        <TextView
            android:id="@+id/tvCPG_WhtRevMade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>
