<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray" >

    <TextView
        android:id="@+id/tvtopp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#d04c26"
        android:gravity="center"
        android:padding="8dp"
        android:text="DO I QUALIFY FOR FREE CARE?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/ii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botm"
        android:layout_below="@+id/tvtopp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp" >

        <LinearLayout
            android:id="@+id/jj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPastHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="I pledge in all honesty that I cannot afford to pay for this care. I promise to sponsor care in the future when I have available funds."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#d04c26"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPastHisy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="Please select one:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#d04c26"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/rgFreeCareOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" >

                <RadioButton
                    android:id="@+id/radioFreeCareStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="All college students get free care"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioFreeCareEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My employer will pay for my care"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioFreeCareSingleMom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am a single mom and I really\nneed care for my child"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvPastHisto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="You agree that this is a non life threatening or critical situation and you want base care/consultation?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#d04c26"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/rgFreeCareYesNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioFreeCareNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="NO"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioFreeCareYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/botm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnGetFreeCare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:background="#d04c26"
            android:text="GET FREE LIVE CARE"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFreeCareSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#d04c26"
            android:text="SKIP"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>