<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivSubUser"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_call_screen"
        app:border="true"
        app:border_color="#FFFFFF"
        app:border_width="1sp"
        app:shadow="true"

        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/ivSubUser"
        android:layout_toStartOf="@+id/ivArrow"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvSubUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/theme_red"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tvSubUserRelation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="13sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10sp"
        android:src="@drawable/icon_list_indicator" />

</RelativeLayout>