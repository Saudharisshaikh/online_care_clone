<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cust_border_white_radius_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAssesTittle"
            android:textColor="@color/black_light"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Source"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="normal"
            android:gravity="center"/>

        <TextView
            android:gravity="start"
            android:textColor="#80000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please add the image of your health/ID card by using camera or select an image from the gallery."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="10dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture By Camera"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/app_blue_color"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvSelectFromGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select From Gallery"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/app_blue_color"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textStyle="normal"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvNotNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Now"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red_dark_color"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>