<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/yi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvSocialistry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ee4a1f"
            android:gravity="center"
            android:padding="8dp"
            android:text="Medications, Alergies, and Surgeries "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSociHstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Are you on any medications?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ee4a1f"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgMedications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioMedicationYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radioMedicationNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <EditText
                android:id="@+id/etMedicationsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_fld"
                android:hint="list medications"
                android:inputType="textPostalAddress"
                android:padding="8dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSostory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Have you any Alergies?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ee4a1f"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgAllergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioAllergiesYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radioAllergiesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <EditText
                android:id="@+id/etAllergiesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_fld"
                android:hint="list allergies"
                android:inputType="textPostalAddress"
                android:padding="8dp" >
            </EditText>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/bbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSitory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Please list all hospitalizations and surgeries"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ee4a1f"
                android:textSize="17sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etHospSergryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_fld"
                android:hint="list medications"
                android:inputType="textPostalAddress"
                android:padding="8dp" >
            </EditText>
        </LinearLayout>

         <Button
                android:id="@+id/btnUpdateMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#d04c26"
                android:text="UPDATE"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>