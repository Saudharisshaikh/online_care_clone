<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/sk"
        android:layout_width="70sp"
        android:layout_height="70sp"

        android:layout_margin="10sp" >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgUsersRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_call_screen"
            app:border="true"
            app:border_color="#FFFFFF"
            app:border_width="1sp"
            app:shadow="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" />

        <!-- <ProgressBar
            android:id="@+id/progress"
            style="@style/ProgressBarStyle"
            android:progress="50"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:indeterminate="false"
            android:max="100" /> -->

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/ppp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp" >

        <LinearLayout
            android:layout_toLeftOf="@+id/imgUserStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivIsonline"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_notification"/>
                <TextView
                    android:id="@+id/tvUsersRowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="23sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/justForAlignment"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvUsersRowStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp" />
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvDocOrSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="TextView"
                android:textSize="13sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvZipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgUserStatus"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5sp"
            android:src="@drawable/arrow" />
    </RelativeLayout>

</LinearLayout>