<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.app.onlinecare_pk.dental.ActivityDocDetails"
    android:padding="20dp"
    android:gravity="center">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/tvGeneralCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_emotional_wellness"
            android:gravity="center"
            android:text="General Care"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawablePadding="10dp"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvBehavioralHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_emotional_wellness"
            android:gravity="center"
            android:text="Behavioral Health"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawablePadding="10dp"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDentalCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_emotional_wellness"
            android:gravity="center"
            android:text="Dental Care"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawablePadding="10dp"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>



    </LinearLayout>



    <com.app.onlinecare_pk.util.ActionEditText
        android:id="@+id/etSearchDoc"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cust_border_white_outline"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:hint="What type of doctor you need"
        android:imeOptions="actionDone"
        android:drawableStart="@drawable/ic_search_black_24dp"/>

    <Button
        android:id="@+id/btnFindADoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_dental_red"
        android:text="Find a Doctor"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textStyle="normal" />


</LinearLayout>
