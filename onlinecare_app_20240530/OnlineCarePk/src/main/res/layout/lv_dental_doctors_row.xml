<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
   >


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivDrLivecare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_call_screen"
        app:border="true"
        app:border_color="#FFFFFF"
        app:border_width="2sp"
        app:shadow="true"
        android:layout_gravity="top"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/ivDrLivecare"
        android:layout_toStartOf="@+id/layEnd"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvDrNameLivecare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Paul Victor"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/tvHospitalVicinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Paul Victor"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layEnd"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="5dp">

        <Button
            android:id="@+id/btnRequest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/btn_dental_red_cir"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="15dp"
            android:text="Connect"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <TextView
            android:id="@+id/tvDocFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PKR. 500"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>


        <Button
            android:visibility="gone"
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/btn_dental_red_cir"
            style="?android:attr/borderlessButtonStyle"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="Doc. Info"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </LinearLayout>

</RelativeLayout>