<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"

    android:id="@+id/rvPainItem">
    <!--android:background="@drawable/list_selector2"-->
    <!--rv_item_selector     selector is in OnlineCareUC module-->
    <!--android:padding="15dp"-->

    <TextView
        android:id="@+id/tvDentalPainLevel"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <ImageView
        android:id="@+id/ivDentalPainLevel"
        android:src="@drawable/cust_cir_grey_dpl"
        android:layout_width="10dp"
        android:layout_height="10dp"
        />

</LinearLayout>
