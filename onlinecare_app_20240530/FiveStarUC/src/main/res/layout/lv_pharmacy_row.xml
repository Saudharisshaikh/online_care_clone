<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvPharmacyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/theme_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/theme_red"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/theme_red"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPharmacyCityState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jack Denial"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/theme_red"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/theme_red"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPharmacyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jack Denial"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvSelectPharmacy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_selector"
                    android:gravity="center"
                    android:text="Select Pharmacy"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvPharmacyLocation"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_selector"
                    android:gravity="center"
                    android:text="Show Details"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    /><!--Location-->
            </LinearLayout>


            <!--<TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cust_border_white_outline_red"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_information"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Info"
                android:textColor="@color/theme_red"
                android:textStyle="bold" />-->
            <!--android:background="@drawable/cust_border_white_outline_red"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_location"-->

            <!--android:background="@drawable/cust_border_white_outline_red"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_save_pharmacy"-->

        </LinearLayout>

        <!--<TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/cust_border_white_outline_red"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_save_pharmacy"
            android:gravity="center"
            android:paddingBottom="5dp"
