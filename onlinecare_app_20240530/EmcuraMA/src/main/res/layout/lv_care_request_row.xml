<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@android:color/white">


    <!--android:layout_toStartOf="@+id/layEditOpt"-->
    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivPatientImg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_call_screen"
                    app:border="true"
                    app:border_color="#FFFFFF"
                    app:border_width="2sp"
                    app:shadow="true" />

                <ImageView
                    android:id="@+id/ivIsonline"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="top|end"
                    android:src="@drawable/icon_notification"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jack Denial"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tvCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/btn_selector"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/btn_selector"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvAssignToDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign to Doctor"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/btn_selector"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

    </LinearLayout>



