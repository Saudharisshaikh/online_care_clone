<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <!--android:layout_margin="5dp"
        android:background="@drawable/cust_border_white_outline"-->
    <LinearLayout
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivProvider"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:src="@drawable/icon_call_screen"
                app:border="true"
                app:border_color="#FFFFFF"
                app:border_width="1sp"
                app:shadow="true" />
            <ImageView
                android:id="@+id/ivIsonline"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/icon_notification"/>
            <!--android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"-->
        </FrameLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvProviderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack Denial"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/tvProviderDesig"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available Now"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/btn_selector"
                        android:textColor="@android:color/white"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tvRefer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Refer"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:background="@drawable/btn_selector"
                        android:textColor="@android:color/white"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"/>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>