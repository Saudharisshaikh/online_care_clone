<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@color/theme_red"
        android:text="Followup"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollowup"
        android:layout_margin="10dp"
        android:text="Are you sure"/>

    <com.app.mhcsn_cp.util.ActionEditText
        android:id="@+id/etReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cust_border_white_outline"
        android:padding="10dp"
        android:minLines="3"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="Please enter appointment reason"
        android:gravity="top"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvFollowupCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:background="@drawable/apptmnt_cancel_drawable"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/tvFollowupDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_selector"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textStyle="normal"/>
    </LinearLayout>

</LinearLayout>