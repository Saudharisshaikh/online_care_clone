<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
   
    <LinearLayout
        android:id="@+id/devicesControlLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vc_controller_height"
        android:background="#FFFFFF"
        android:weightSum="6"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/microphoneButton"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/microphone_selector" /></LinearLayout>

        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/speakersButton"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:layout_gravity="center_vertical"
			style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/speakers_selector" /></LinearLayout>

        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/cameraButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/camera_selector" /></LinearLayout>

        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/endOfCallButton"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:background="@drawable/controller_hangup_selector" 
        	android:layout_gravity="center_vertical"
        	style="?android:attr/borderlessButtonStyle"        
       	 	android:cropToPadding="true"
       	 	android:keepScreenOn="true" /></LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/effectButton"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/effect_selector" />
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/videoResolution"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/resolution_selector" /></LinearLayout>
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/audioRoutes"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/vc_controller_button_size"
            android:layout_height="@dimen/vc_controller_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/speakers_selector" /></LinearLayout>

    </LinearLayout>

</RelativeLayout>
