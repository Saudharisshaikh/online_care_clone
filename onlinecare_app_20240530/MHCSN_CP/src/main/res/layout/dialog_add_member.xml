<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Careplan Team Member"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>
        <ImageView
            android:background="@android:color/transparent"
            android:id="@+id/ivCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_cancel_cir"/>

        <LinearLayout
            android:background="@android:color/transparent"
            android:id="@+id/layContent"
            android:padding="20dp"
            android:layout_below="@+id/ivCancel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Select Type:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spMemberType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"/>
            <LinearLayout
                android:id="@+id/spMemberCont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Select Member:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:id="@+id/spSelMember"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/otherCTMCont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Name:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etCTM_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Name"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Phone #:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etCTM_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Phone #"
                    android:padding="10sp"
                    android:inputType="phone"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
                <ImageView
                    android:id="@+id/ivCTM_Img"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_placeholder_2"
                    />
                <Button
                    android:id="@+id/btnCTM_Img"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/apptmnt_cancel_drawable"
                    android:text="Choose Image"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layBottom1"
            android:visibility="visible"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layContent"
            android:orientation="vertical">
            <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"/>
            <Button
                android:id="@+id/btnAdMember"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/btn_selector"
                android:text="Add New Team Member"
                android:textStyle="normal"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
