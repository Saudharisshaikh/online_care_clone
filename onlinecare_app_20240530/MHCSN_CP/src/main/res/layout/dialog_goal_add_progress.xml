<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical|left"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Goal Progress"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"/>
                <ImageView
                    android:background="@android:color/transparent"
                    android:id="@+id/ivCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_cancel_cir"
                    android:layout_gravity="right"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"/>

            <LinearLayout

                android:background="@android:color/transparent"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Progress made toward goal:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:id="@+id/spGoalProgress"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"/>

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Explain progress rating:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etProgRatting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Explain progress rating"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Identified barriers to fullfilling goal:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etProgBarriers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="barriers"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Interventions to overcome barriers:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etProgInterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Interventions"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Self-management plan related to goal:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etProgSelfMgt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Self-management plan"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Referral made?"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:id="@+id/spProgRefMade"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"/>
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="If yes, who was referral to?"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etProgWhoWasRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="who was referral"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Reason for referral"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etReasonForRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Reason for referral"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Emergency back-up plan in place?"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:id="@+id/spEmBackup"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"/>
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Are revisions needed?"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:id="@+id/spRevNeeded"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"/>
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="If yes, what revisions were made?"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/etWhatRevMade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Name"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />

            </LinearLayout>
            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/darker_gray"/>
                <Button
                    android:id="@+id/btnAddProgress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/btn_selector"
                    android:text="Add Progress"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
