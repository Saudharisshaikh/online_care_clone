<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/cust_border_white_outline">

    </LinearLayout>-->



    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardView.SS">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/host_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:background="@android:color/white"
                android:padding="10dp"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCareGoalRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvGoalPriorityLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority Level"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvDateGoalSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Goal Set"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvGoalCaseManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Case Manager"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>