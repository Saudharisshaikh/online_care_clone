<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/cust_border_white_outline">

        <TextView
            android:id="@+id/tvHospAdmDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Date : "
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHospAdmAdmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admission Date : "
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHospAdmDischarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discharge Date :"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHospAdmHosp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital : "
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHospAdmDiagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis : "
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHospAdmDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admission Description : "
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHospAdmDeschSumm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discharge Summary : "
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>




    </LinearLayout>
</LinearLayout>