<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
    <!--</style>-->
	
	
	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="buttonBarStyle">@style/ButtonBar</item>-->
        <!--<item name="buttonBarButtonStyle">@style/ButtonBarButton</item>-->
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    
    <!-- ================================================================================= -->
    
    <!-- Application theme. -->
    <style name="DrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
      <item name="android:textColorSecondary">@android:color/background_dark</item>
      <item name="actionMenuTextColor">@android:color/background_dark</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item><!--pin view style-->
    </style>
    
    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:background">@color/half_transparent</item> <!-- these 2 lines if custborder background added it was shown on each listview cell -->
        <item name="background">@color/half_transparent</item>
        <item name="android:windowBackground">@drawable/cust_border_half_transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/half_transparent</item>
        <item name="android:windowContentOverlay">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@color/half_transparent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
    </style>
    
    
    <!--for white drawer title and togle color use this  in toolbar-->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow --> 
        <item name="colorControlNormal">@android:color/white</item>
        
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>



    <style name="TransparentThemeH4B" parent="@style/Theme.AppCompat.Light.Dialog">

        <item name="android:background">@color/half_transparent</item>
        <item name="background">@color/half_transparent</item>

        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/half_transparent</item>
        <item name="android:windowContentOverlay">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--<item name="android:windowAnimationStyle">@color/half_transparent</item>-->

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#191919</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

        <item name="android:windowFrame">@null</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowTitleStyle">@null</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <style name="CardView.SS" >
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/app_blue_color</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>


    <style name="FilePickerTheme" parent="LibAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--added by gm for file picker tabbar txt color-->
        <item name="android:textColorPrimary">@android:color/white</item><!--Selected-->
        <item name="android:textColorSecondary">#80FFFFFF</item><!--othertabs-->
        <!--<item name="actionMenuTextColor">@android:color/white</item>-->
    </style>




    <!--===============Angora.io Starts============================================-->
    <style name="select_role_block">
        <item name="android:background">@drawable/angora_select_role_block_bg</item>
        <item name="android:layout_width">@dimen/role_block_width</item>
        <item name="android:layout_height">@dimen/role_block_height</item>
        <item name="android:layout_marginTop">@dimen/role_block_margin_top</item>
    </style>

    <style name="select_role_block_icon">
        <item name="android:layout_width">@dimen/role_block_icon_width</item>
        <item name="android:layout_height">@dimen/role_block_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="select_role_block_content">
        <item name="android:layout_width">@dimen/role_block_content_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/role_block_content_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/role_block_content_margin_right</item>
    </style>

    <style name="select_role_block_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/gray_deep_dark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="select_role_block_hint">
        <item name="android:layout_width">@dimen/role_block_content_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginTop">@dimen/role_block_hint_margin_top</item>
    </style>

    <style name="select_role_block_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/angora_ic_arrow_right</item>
    </style>
    <!--===============Angora.io Ends============================================-->

</resources>
