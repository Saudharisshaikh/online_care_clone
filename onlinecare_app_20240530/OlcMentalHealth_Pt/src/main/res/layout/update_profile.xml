<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_btn"
        android:id="@+id/toolbarLay"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/xxx"
        android:layout_below="@+id/toolbarLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/iik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >
            <FrameLayout
                android:id="@+id/joo"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12sp" >

                <com.app.Olc_MentalHealth.AspectRationImageView
                    android:id="@+id/imgMainList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgChangeProfileImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_call_screen"
                    app:border="true"
                    app:border_color="#66FFFFFF"
                    app:border_width="2sp"
                    app:shadow="true" />
            </FrameLayout>

            <Button
                android:id="@+id/btnEditPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile Picture"
                android:textColor="@color/theme_red"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/vidd"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/theme_red" />



            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="First Name*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="First Name"
                android:textColor="@color/black"
                android:inputType="textCapWords"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxLength="35"
                android:digits="aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ.- "
                android:background="@drawable/cust_border_white_outline" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="Last Name*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Last Name"
                android:textColor="@color/black"
                android:inputType="textCapWords"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxLength="35"
                android:digits="aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ.- "
                android:background="@drawable/cust_border_white_outline" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="Birthdate*"
                android:textColor="@color/theme_red"/>
            <EditText
                android:id="@+id/etUpdateProfilBday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Birth Date"
                android:inputType="none"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/cust_border_white_outline" >
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="Phone*"
                android:textColor="@color/theme_red"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:padding="2sp"
                android:layout_marginTop="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 "
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"/>

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/etUpdateProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:background="@drawable/cust_border_white_outlinewhite"
                    android:inputType="phone"
                    android:paddingRight="10sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="30dp"
                    android:maxLength="25"
                    app:mask="###-###-####"
                    app:allowed_chars="1234567890">
                </br.com.sapereaude.maskedEditText.MaskedEditText>

            </LinearLayout>
            <!--+1(###)###-####-->  <!--android:hint="Phone Number"-->

            <!--<EditText
                android:id="@+id/etUpdateProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="@color/theme_red"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxLength="25"
                android:background="@drawable/cust_border_white_outline"
                />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="St. Address*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="St. Address"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxLength="35"
                android:background="@drawable/cust_border_white_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="Zip Code*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileZipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Zip code"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxLength="9"
                android:background="@drawable/cust_border_white_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="City*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="City"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxLength="35"
                android:background="@drawable/cust_border_white_outline"
                android:inputType="textCapWords"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="State*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="State"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/cust_border_white_outline"
                android:inputType="none"
                android:focusable="false"
                android:text="Michigan"/>
            <Spinner
                android:id="@+id/spUpdateProfileState"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/spinner_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note : Currently accepting patients in Michigan, Illinois, Wisconsin &amp; Florida"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="Country*"
                android:textColor="@color/theme_red"/>
            <com.app.Olc_MentalHealth.util.ActionEditText
                android:imeOptions="actionDone"
                android:id="@+id/etUpdateProfileCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Country"
                android:textColor="@color/black"
                android:inputType="none"
                android:editable="false"
                android:focusable="false"
                android:padding="10sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/cust_border_white_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="-3dp"
                android:layout_marginLeft="40dp"
                android:text="Vitals*"
                android:visibility="gone"
                android:textColor="@color/theme_red"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/cust_border_grey_outline"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:text="Weight(Lbs):"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="13sp" />

                        <com.app.Olc_MentalHealth.util.ActionEditText
                            android:id="@+id/etOTWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cust_border_white_outline"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="e.g. 158"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textCursorDrawable="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Height:"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.app.Olc_MentalHealth.util.ActionEditText
                                android:id="@+id/etOTHeightFt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="1dp"
                                android:layout_weight="1"
                                android:background="@drawable/cust_border_white_outline"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Feet"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textCursorDrawable="@null" />

                            <com.app.Olc_MentalHealth.util.ActionEditText
                                android:id="@+id/etOTHeightIn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1dp"
                                android:layout_weight="1"
                                android:background="@drawable/cust_border_white_outline"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Inches"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textCursorDrawable="@null" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Gender*"
                    android:textColor="@color/theme_red"/>

                <RadioGroup
                    android:id="@+id/rgEditProfilGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:checked="true"
                        android:text="Male  "
                        android:textColor="@color/black"
                        android:buttonTint="@color/theme_red" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:buttonTint="@color/theme_red" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/oi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">
                <!--
                android:textColor="@color/theme_red"-->
                <TextView
                    android:id="@+id/texView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Marital Status*"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/theme_red"/>

                <RadioGroup
                    android:id="@+id/rgMaritalStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:checked="true"
                        android:text="Single"
                        android:textColor="@color/black"
                        android:buttonTint="@color/theme_red"
                        android:textSize="11sp"/>

                    <RadioButton
                        android:id="@+id/radioMarried"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Married"
                        android:textColor="@color/black"
                        android:buttonTint="@color/theme_red"
                        android:textSize="11sp"/>

                    <RadioButton
                        android:id="@+id/radioDivorced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Divorced"
                        android:textColor="@color/black"
                        android:buttonTint="@color/theme_red"
                        android:textSize="11sp"/>

                    <RadioButton
                        android:id="@+id/radioWidowed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Widowed"
                        android:textColor="@color/black"
                        android:buttonTint="@color/theme_red"
                        android:textSize="11sp"/>
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/btnUpdtPrflSbmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:background="@drawable/btn_selector" />
            <!-- android:layout_wixtaldth="wrap_content" commited remove bg img-->
            <Button
                android:id="@+id/btnUpdtPrflPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:background="@drawable/btn_selector"
                />
            <Button
                android:id="@+id/btnAddInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="View / Modify Insuance"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:background="@drawable/btn_selector"
                />
            <Button
                android:id="@+id/btnAddPrimaryCare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Add / Modify Primary Care Provider"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:background="@drawable/btn_selector"
                />

            <Button
                android:id="@+id/btnDeleteAccount"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_selector_red"
                android:padding="10dp"
                android:text="Delete Account"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>