<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cust_border_white_radius_10"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Please select an option"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnSelPtViewPriDiag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"
            android:text="View Primary Diagnosis"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_livecare_view_reports"
            android:textAllCaps="false"
            android:textStyle="normal" />
        <Button
            android:id="@+id/btnSelPtViewReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"
            android:text="View Medical Reports"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_livecare_view_reports"
            android:textAllCaps="false"
            android:textStyle="normal" />
        <Button
            android:id="@+id/btnSelPtViewMedications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"
            android:text="View Medications"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_livecare_view_history"
            android:textStyle="normal" />
        <Button
            android:id="@+id/btnSelPtProblemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"
            android:text="View Problem List"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_livecare_view_reports"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnSelPtViewMedicalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"
            android:text="View Medical History"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_livecare_view_history"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnScreeningTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector"
            android:padding="10dp"
            android:text="View Screening Report"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_livecare_view_history"
            android:textStyle="normal" />
        <Button
            android:id="@+id/btnNotNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/apptmnt_cancel_drawable"
            android:padding="10dp"
            android:text="Not Now"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>