                            android:layout_height="wrap_content"
                            android:background="@drawable/cust_border_white_outline"
                            android:ems="10"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:inputType="none"
                            android:focusable="false"
                            android:padding="10dp"
