<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    tools:context=".careplan.ActivityAddCarePlan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusableInTouchMode="true"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Preferred method of communication :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spPrefMethod"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"/>

            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Method Input :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/etMethodInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Enter Method Input"
                android:padding="10sp"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/cust_border_white_outline" />

            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Delivery of CM/LTSS services :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/etDelCMLTSS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Enter Delivery of CM/LTSS services"
                android:padding="10sp"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/cust_border_white_outline" />

            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Patient has completed life planning activities :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spPtCompLifePlan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"/>

            <LinearLayout
                android:id="@+id/spPtCompLifePlan_IfNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="If no, was life-planning discussed ?"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
                <Spinner
                    android:id="@+id/spWasLifePalnDisc"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"/>
                <TextView
                    android:id="@+id/etOutComeOfDiscLabel"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Outcome of discussion :"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/etOutComeOfDisc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Enter outcome of discussion"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
            </LinearLayout>

            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Were educational materials sent ?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spEduMatSent"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"/>

            <LinearLayout
                android:id="@+id/spEduMatSent_IfYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Name of materials :"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/etNameOfMaterials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Enter name of materials:"
                    android:padding="10sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/cust_border_white_outline" />
            </LinearLayout>


            <TextView
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="follow-up discussion need to be scheduled ?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spFollowupDisc"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"/>



            <Button
                android:id="@+id/btnAddCarePlan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/btn_selector"
                android:text="Add Care Plan"
                android:textStyle="normal"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
