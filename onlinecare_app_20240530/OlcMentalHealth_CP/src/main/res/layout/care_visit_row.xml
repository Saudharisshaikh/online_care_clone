<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/cust_border_grey_outline"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivPatient"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_call_screen"
                    app:border="true"
                    app:border_color="#FFFFFF"
                    app:border_width="1sp"
                    app:shadow="true" />
                <ImageView
                    android:id="@+id/ivIsonline"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_notification"/>
            </FrameLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack Denial"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textColor="@color/theme_red"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/tvApptDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07/02/2018"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <TextView
                            android:id="@+id/tvFromTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05:00 PM"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:background="@drawable/apptmnt_cancel_drawable"
                            android:textColor="#FFFFFF"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <TextView
                            android:id="@+id/tvToTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05:15 PM"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:background="@drawable/apptmnt_cancel_drawable"
                            android:textColor="#FFFFFF"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <TextView
                            android:id="@+id/tvAptStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:background="@drawable/apptmnt_cancel_drawable"
                            android:textColor="#FFFFFF"
                            android:padding="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom : "
                android:textColor="@color/theme_red"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tvAptSymp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Symptoms"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition : "
                android:textColor="@color/theme_red"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tvAptCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cough"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--android:drawableLeft="@drawable/ic_livecare_video_checkup"-->
            <TextView
                android:id="@+id/tvCallPatient"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call to Patient"
                android:background="@drawable/btn_selector"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp"/>
            <!--android:drawableLeft="@drawable/ic_livecare_send_msg"-->
            <TextView
                android:id="@+id/tvSendMsgPatient"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:background="@drawable/btn_selector"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doc Info : "
            android:textColor="@color/theme_red"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivDoc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_call_screen"
                    app:border="true"
                    app:border_color="#FFFFFF"
                    app:border_width="1sp"
                    app:shadow="true" />
                <ImageView
                    android:id="@+id/ivDocIsOnline"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/icon_notification"/>
            </FrameLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDocName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peterson Edwards L"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--android:drawableLeft="@drawable/ic_livecare_video_checkup"-->
                    <TextView
                        android:id="@+id/tvCallDoc"
                        android:drawablePadding="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Call to Doctor"
                        android:background="@drawable/btn_selector"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="17sp"/>
                    <!--android:drawableLeft="@drawable/ic_livecare_send_msg"-->
                    <TextView
                        android:id="@+id/tvSendMsgDoc"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:background="@drawable/btn_selector"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="17sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>