<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:orientation="vertical"
    tools:context="com.app.OnlineCareTDC_MA.ActivityEnvirForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Living Arrangement"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <com.app.OnlineCareTDC_MA.util.ExpandableHeightListView
                    android:id="@+id/lvEnvLivingArrangement"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If Yes, Where"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.app.OnlineCareTDC_MA.util.ActionEditText
                    android:id="@+id/etEnvWhere"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_border_white_outline"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:padding="10dp"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Safety"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <com.app.OnlineCareTDC_MA.util.ExpandableHeightListView
                    android:id="@+id/lvEnvHomeSafety"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outside Environment"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <com.app.OnlineCareTDC_MA.util.ExpandableHeightListView
                    android:id="@+id/lvEnvOutsideEnvironment"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Environment"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <com.app.OnlineCareTDC_MA.util.ExpandableHeightListView
                    android:id="@+id/lvEnvHomeEnvironment"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person chooses to live"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.app.OnlineCareTDC_MA.util.ActionEditText
                    android:id="@+id/etEnvPersonchoosestolive"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_border_white_outline"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:padding="10dp"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evacuation Plan"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.app.OnlineCareTDC_MA.util.ActionEditText
                    android:id="@+id/etEnvEvacuationPlan"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_border_white_outline"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:padding="10dp"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:background="@drawable/cust_border_white_radius_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Safety Notes"
                    android:textColor="@color/theme_red"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.app.OnlineCareTDC_MA.util.ActionEditText
                    android:id="@+id/etEnvHomeSafetyNotes"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_border_white_outline"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:padding="10dp"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <Button
                android:id="@+id/btnEnvSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:text="Submit"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
