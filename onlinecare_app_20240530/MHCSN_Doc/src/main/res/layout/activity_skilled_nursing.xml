                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:text="Fax"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <com.app.mhcsn_dr.util.ActionEditText
                    android:id="@+id/etSkilledFax"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_border_white_outline"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Fax"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cbApprove"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:layout_marginLeft="10dp"
                android:textColor="@color/theme_red"
                android:buttonTint="@color/theme_red"/>

                <RelativeLayout
                    android:id="@+id/laySignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:id="@+id/ivSignature"
                        android:layout_centerHorizontal="true"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_signature" />
                    <TextView
                        android:layout_below="@+id/ivSignature"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signature for approval"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>
            </FrameLayout>

            <Button
                android:id="@+id/btnSkilledDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:text="Send"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
