<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layPtName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnPatientPage"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivPatient"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_call_screen"
                android:layout_margin="10dp"
                app:border="true"
                app:border_color="#FFFFFF"
                app:border_width="1sp"
                app:shadow="true" />

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Medium Text"
                android:textColor="@color/theme_red"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toEndOf="@+id/ivIsonline"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnPatientPage"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Patient Profile"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_selector"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>
</LinearLayout>